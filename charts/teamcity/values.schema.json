{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "TeamCity Helm Chart Values Schema",
  "description": "Schema for values.yaml for TeamCity Helm Chart.",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart (used in naming resources)",
      "default": ""
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name (default is the chart name + release name)",
      "default": ""
    },
    "server": {
      "type": "object",
      "description": "TeamCity Server configuration",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "description": "Number of server replicas/pods to run (should typically be 1)",
          "default": 1,
          "minimum": 1
        },
        "containers": {
          "type": "object",
          "properties": {
            "server": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": {
                      "type": "string",
                      "description": "Docker image repository for TeamCity Server",
                      "default": "jetbrains/teamcity-server"
                    },
                    "tag": {
                      "type": "string",
                      "description": "Image tag to use (leave empty to use default from Chart or latest)",
                      "default": ""
                    },
                    "pullPolicy": {
                      "type": "string",
                      "description": "Image pull policy (e.g., Always, IfNotPresent, Never)",
                      "default": "IfNotPresent",
                      "enum": ["Always", "IfNotPresent", "Never"]
                    }
                  },
                  "required": ["repository", "pullPolicy"]
                },
                "env": {
                  "type": "array",
                  "description": "Environment variables for TeamCity server container",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "value": { "type": "string" }
                    },
                    "required": ["name", "value"]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": {
                          "type": "string",
                          "description": "Minimum amount of memory requested for the server container",
                          "default": "4Gi"
                        }
                      },
                      "required": ["memory"]
                    }
                  }
                },
                "volumeMounts": {
                  "type": ["array", "null"],
                  "description": "Additional volume mounts for TeamCity server container",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "mountPath": { "type": "string" },
                      "subPath": { "type": "string" }
                    },
                    "required": ["name", "mountPath"]
                  }
                },
                "port": {
                  "type": "integer",
                  "description": "Default port for the TeamCity Server HTTP service (web UI and API)",
                  "default": 8111
                }
              },
              "required": ["image", "port"]
            },
            "database": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": {
                      "type": "string",
                      "description": "Docker image repository for TeamCity database",
                      "default": "postgres"
                    },
                    "tag": {
                      "type": "string",
                      "description": "Image tag to use (leave empty to use default from Chart or latest)",
                      "default": "14"
                    },
                    "pullPolicy": {
                      "type": "string",
                      "description": "Image pull policy (e.g., Always, IfNotPresent, Never)",
                      "default": "IfNotPresent",
                      "enum": ["Always", "IfNotPresent", "Never"]
                    }
                  },
                  "required": ["repository", "tag", "pullPolicy"]
                },
                "env": {
                  "type": "array",
                  "description": "Environment variables for TeamCity database container",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "value": { "type": "string" }
                    },
                    "required": ["name", "value"]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": {
                          "type": "string",
                          "description": "Minimum amount of memory requested for the TeamCity database container",
                          "default": "2Gi"
                        }
                      },
                      "required": ["memory"]
                    }
                  }
                },
                "volumeMounts": {
                  "type": ["array", "null"],
                  "description": "Additional volume mounts for TeamCity database container",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "mountPath": { "type": "string" },
                      "subPath": { "type": "string" }
                    },
                    "required": ["name", "mountPath"]
                  }
                }
              },
              "required": ["image"]
            }
          }
        },
        "hostname": {
          "type": "string",
          "description": "Hostname used for the TeamCity Server pod/container",
          "default": "teamcity-server"
        },
        "volumes": {
          "type": ["array", "null"],
          "description": "Additional volumes to be mounted into the TeamCity Server pods",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "persistentVolumeClaim": {
                "type": "object",
                "properties": {
                  "claimName": { "type": "string" }
                },
                "required": ["claimName"]
              }
            },
            "required": ["name", "persistentVolumeClaim"]
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "Kubernetes service type (e.g., ClusterIP, NodePort, LoadBalancer)",
              "default": "ClusterIP",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
            },
            "ports": {
              "type": "array",
              "description": "List of ports to expose via the service",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "port": { "type": "integer" },
                  "targetPort": { "type": "integer" },
                  "protocol": { "type": "string", "enum": ["TCP", "UDP"] }
                },
                "required": ["name", "port", "targetPort", "protocol"]
              }
            }
          }
        },
        "ingress": {
          "type": ["object", "null"],
          "description": "Configuration for Ingress to expose TeamCity Server via HTTP/HTTPS",
          "properties": {
            "annotations": {
              "type": ["object", "null"],
              "description": "Annotations to customize the behavior of the ingress controller",
              "additionalProperties": { "type": "string" }
            },
            "className": {
              "type": "string",
              "description": "Ingress class name (used to select the Ingress controller, e.g., nginx or traefik)",
              "default": "nginx"
            },
            "tls": {
              "type": ["array", "null"],
              "description": "TLS configuration for the ingress",
              "items": {
                "type": "object",
                "properties": {
                  "hosts": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "secretName": { "type": "string" }
                },
                "required": ["hosts", "secretName"]
              }
            },
            "rules": {
              "type": ["array", "null"],
              "description": "List of ingress rules",
              "items": {
                "type": "object",
                "properties": {
                  "host": { "type": "string" },
                  "http": {
                    "type": "object",
                    "properties": {
                      "paths": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "path": { "type": "string" },
                            "pathType": { "type": "string" },
                            "backend": {
                              "type": "object",
                              "properties": {
                                "service": {
                                  "type": "object",
                                  "properties": {
                                    "name": { "type": "string" },
                                    "port": {
                                      "type": "object",
                                      "properties": {
                                        "number": { "type": "integer" }
                                      },
                                      "required": ["number"]
                                    }
                                  },
                                  "required": ["name", "port"]
                                }
                              },
                              "required": ["service"]
                            }
                          },
                          "required": ["path", "pathType", "backend"]
                        }
                      }
                    },
                    "required": ["paths"]
                  }
                },
                "required": ["host", "http"]
              }
            }
          }
        }
      }
    },
    "agent": {
      "type": "object",
      "description": "TeamCity Agent configuration",
      "properties": {
        "ordinals": {
          "type": "object",
          "properties": {
            "start": {
              "type": "integer",
              "description": "Ordinals configuration for the StatefulSet (starting ordinal index)",
              "default": 1
            }
          }
        },
        "replicaCount": {
          "type": "integer",
          "description": "Number of agent replicas/pods to run",
          "default": 3,
          "minimum": 1
        },
        "containers": {
          "type": "object",
          "properties": {
            "agent": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": {
                      "type": "string",
                      "description": "Docker image repository for TeamCity Agent",
                      "default": "jetbrains/teamcity-agent"
                    },
                    "tag": {
                      "type": "string",
                      "description": "Image tag to use (leave empty to use default from Chart or latest)",
                      "default": ""
                    },
                    "pullPolicy": {
                      "type": "string",
                      "description": "Image pull policy (e.g., Always, IfNotPresent, Never)",
                      "default": "Always",
                      "enum": ["Always", "IfNotPresent", "Never"]
                    }
                  },
                  "required": ["repository", "pullPolicy"]
                },
                "env": {
                  "type": "array",
                  "description": "Environment variables for TeamCity agent container",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "value": { "type": "string" }
                    },
                    "required": ["name", "value"]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": {
                          "type": "string",
                          "description": "Minimum amount of memory requested for each agent container",
                          "default": "2Gi"
                        }
                      },
                      "required": ["memory"]
                    }
                  }
                },
                "securityContext": {
                  "type": "object",
                  "properties": {
                    "runAsUser": {
                      "type": "integer",
                      "description": "User ID to run the agent container process as (set to 0 for root)",
                      "default": 0
                    }
                  }
                },
                "volumeMounts": {
                  "type": "array",
                  "description": "Additional volume mounts for TeamCity agent containers",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "mountPath": { "type": "string" }
                    },
                    "required": ["name", "mountPath"]
                  }
                }
              },
              "required": ["image"]
            }
          }
        },
        "hostname": {
          "type": "string",
          "description": "Hostname used for the TeamCity agent pod/container",
          "default": "teamcity-agent"
        },
        "volumes": {
          "type": ["array", "null"],
          "description": "Additional volumes to be mounted into the TeamCity Agent pods",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "path": { "type": "string" }
            },
            "required": ["name", "path"]
          }
        },
        "volumeClaimTemplates": {
          "type": "array",
          "description": "Persistent volume claim templates for TeamCity Agent pods",
          "items": {
            "type": "object",
            "properties": {
              "metadata": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" }
                },
                "required": ["name"]
              },
              "spec": {
                "type": "object",
                "properties": {
                  "accessModes": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "resources": {
                    "type": "object",
                    "properties": {
                      "requests": {
                        "type": "object",
                        "properties": {
                          "storage": {
                            "type": "string",
                            "description": "Storage size requested for each agent's persistent volume",
                            "default": "1Gi"
                          }
                        },
                        "required": ["storage"]
                      }
                    }
                  },
                  "storageClassName": {
                    "type": "string",
                    "description": "Storage class to use for agent volumes",
                    "default": "standard"
                  }
                },
                "required": ["accessModes", "resources", "storageClassName"]
              }
            },
            "required": ["metadata", "spec"]
          }
        }
      }
    }
  },
  "additionalProperties": false
}
