{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "TeamCity Helm Chart Values Schema",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "default": ""
    },
    "fullnameOverride": {
      "type": "string",
      "default": ""
    },
    "server": {
      "type": "object",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "default": 1,
          "minimum": 1
        },
        "containers": {
          "type": "object",
          "properties": {
            "server": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": { "type": "string", "default": "jetbrains/teamcity-server" },
                    "tag": { "type": "string", "default": "" },
                    "pullPolicy": { "type": "string", "default": "IfNotPresent", "enum": ["Always", "IfNotPresent", "Never"] }
                  },
                  "required": ["repository", "pullPolicy"]
                },
                "env": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "value": { "type": "string" }
                    },
                    "required": ["name", "value"]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": { "type": "string", "default": "4Gi" }
                      },
                      "required": ["memory"]
                    }
                  },
                  "required": ["requests"]
                },
                "volumeMounts": {
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "mountPath": { "type": "string" },
                      "subPath": { "type": "string" }
                    },
                    "required": ["name", "mountPath"]
                  }
                },
                "port": {
                  "type": "integer",
                  "default": 8111
                }
              },
              "required": ["image", "resources", "port"]
            },
            "database": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": { "type": "string", "default": "postgres" },
                    "tag": { "type": "string", "default": "14" },
                    "pullPolicy": { "type": "string", "default": "IfNotPresent", "enum": ["Always", "IfNotPresent", "Never"] }
                  },
                  "required": ["repository", "tag", "pullPolicy"]
                },
                "env": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "value": { "type": "string" }
                    },
                    "required": ["name", "value"]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": { "type": "string", "default": "2Gi" }
                      },
                      "required": ["memory"]
                    }
                  },
                  "required": ["requests"]
                },
                "volumeMounts": {
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "mountPath": { "type": "string" },
                      "subPath": { "type": "string" }
                    },
                    "required": ["name", "mountPath"]
                  }
                }
              },
              "required": ["image", "resources"]
            }
          },
          "required": ["server", "database"]
        },
        "hostname": {
          "type": "string",
          "default": "teamcity-server"
        },
        "volumes": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "persistentVolumeClaim": {
                "type": "object",
                "properties": {
                  "claimName": { "type": "string" }
                },
                "required": ["claimName"]
              }
            },
            "required": ["name", "persistentVolumeClaim"]
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "default": "ClusterIP",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
            },
            "ports": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "port": { "type": "integer" },
                  "targetPort": { "type": "integer" },
                  "protocol": { "type": "string", "default": "TCP" }
                },
                "required": ["name", "port", "targetPort", "protocol"]
              }
            }
          },
          "required": ["type", "ports"]
        },
        "ingress": {
          "type": ["object", "null"],
          "properties": {
            "annotations": {
              "type": ["object", "null"],
              "additionalProperties": { "type": "string" }
            },
            "className": {
              "type": "string",
              "default": "nginx"
            },
            "tls": {
              "type": ["array", "null"],
              "items": {
                "type": "object",
                "properties": {
                  "hosts": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "secretName": { "type": "string" }
                },
                "required": ["hosts", "secretName"]
              }
            },
            "rules": {
              "type": ["array", "null"],
              "items": {
                "type": "object",
                "properties": {
                  "host": { "type": "string" },
                  "http": {
                    "type": "object",
                    "properties": {
                      "paths": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "path": { "type": "string" },
                            "pathType": { "type": "string" },
                            "backend": {
                              "type": "object",
                              "properties": {
                                "service": {
                                  "type": "object",
                                  "properties": {
                                    "name": { "type": "string" },
                                    "port": {
                                      "type": "object",
                                      "properties": {
                                        "number": { "type": "integer" }
                                      },
                                      "required": ["number"]
                                    }
                                  },
                                  "required": ["name", "port"]
                                }
                              },
                              "required": ["service"]
                            }
                          },
                          "required": ["path", "pathType", "backend"]
                        }
                      }
                    },
                    "required": ["paths"]
                  }
                },
                "required": ["host", "http"]
              }
            }
          }
        }
      },
      "required": ["replicaCount", "containers", "hostname", "service"]
    },
    "agent": {
      "type": "object",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "default": 3,
          "minimum": 1
        },
        "containers": {
          "type": "object",
          "properties": {
            "agent": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": { "type": "string", "default": "jetbrains/teamcity-agent" },
                    "tag": { "type": "string", "default": "" },
                    "pullPolicy": { "type": "string", "default": "Always", "enum": ["Always", "IfNotPresent", "Never"] }
                  },
                  "required": ["repository", "pullPolicy"]
                },
                "env": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "value": { "type": "string" }
                    },
                    "required": ["name", "value"]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": { "type": "string", "default": "2Gi" }
                      },
                      "required": ["memory"]
                    }
                  },
                  "required": ["requests"]
                },
                "volumeMounts": {
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "mountPath": { "type": "string" }
                    },
                    "required": ["name", "mountPath"]
                  }
                }
              },
              "required": ["image", "resources"]
            }
          },
          "required": ["agent"]
        },
        "hostname": {
          "type": "string",
          "default": "teamcity-agent"
        },
        "volumes": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "persistentVolumeClaim": {
                "type": "object",
                "properties": {
                  "claimName": { "type": "string" }
                },
                "required": ["claimName"]
              }
            },
            "required": ["name", "persistentVolumeClaim"]
          }
        },
        "volumeClaimTemplates": {
          "type": "object",
          "properties": {
            "resources": {
              "type": "object",
              "properties": {
                "requests": {
                  "type": "object",
                  "properties": {
                    "storage": { "type": "string", "default": "1Gi" }
                  },
                  "required": ["storage"]
                },
                "storageClassName": { "type": "string", "default": "standard" }
              },
              "required": ["requests", "storageClassName"]
            }
          },
          "required": ["resources"]
        }
      },
      "required": ["replicaCount", "containers", "hostname", "volumeClaimTemplates"]
    }
  },
  "required": ["server", "agent"]
}
