{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "TeamCity Helm Chart Values Schema",
  "description": "Schema for validating values.yaml for TeamCity Helm chart.",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart (used in naming resources)",
      "default": ""
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name (default is the chart name + release name)",
      "default": ""
    },
    "server": {
      "type": "object",
      "description": "TeamCity Server configuration",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "description": "Number of server replicas/pods to run (should typically be 1)",
          "default": 1,
          "minimum": 1
        },
        "containers": {
          "type": "object",
          "properties": {
            "server": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": { "type": "string", "description": "Docker image repository for TeamCity Server" },
                    "tag": { "type": "string", "description": "Image tag to use" },
                    "pullPolicy": { "type": "string", "description": "Image pull policy", "enum": ["Always", "IfNotPresent", "Never"] }
                  },
                  "required": ["repository", "pullPolicy"]
                },
                "env": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "value": { "type": "string" }
                    },
                    "required": ["name", "value"]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": { "type": "string", "description": "Minimum amount of memory requested for the server container" }
                      },
                      "required": ["memory"]
                    }
                  },
                  "required": ["requests"]
                },
                "volumeMounts": {
                  "description": "Additional volume mounts for containers",
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "mountPath": { "type": "string" },
                      "subPath": { "type": "string" }
                    },
                    "required": ["name", "mountPath"]
                  }
                },
                "port": {
                  "type": "integer",
                  "description": "Default port for the TeamCity HTTP service",
                  "default": 8111
                }
              },
              "required": ["image", "resources", "port"]
            },
            "database": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": { "type": "string", "description": "Docker image repository for TeamCity Server" },
                    "tag": { "type": "string", "description": "Image tag to use" },
                    "pullPolicy": { "type": "string", "description": "Image pull policy", "enum": ["Always", "IfNotPresent", "Never"] }
                  },
                  "required": ["repository", "tag", "pullPolicy"]
                },
                "env": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "value": { "type": "string" }
                    },
                    "required": ["name", "value"]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": { "type": "string", "description": "Minimum amount of memory requested for the server container" }
                      },
                      "required": ["memory"]
                    }
                  },
                  "required": ["requests"]
                },
                "volumeMounts": {
                  "description": "Additional volume mounts for containers",
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "mountPath": { "type": "string" },
                      "subPath": { "type": "string" }
                    },
                    "required": ["name", "mountPath"]
                  }
                }
              },
              "required": ["image", "resources"]
            }
          },
          "required": ["server", "database"]
        },
        "volumes": {
          "description": "Additional volumes to be mounted into the pods",
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "persistentVolumeClaim": {
                "type": "object",
                "properties": {
                  "claimName": { "type": "string" }
                },
                "required": ["claimName"]
              }
            },
            "required": ["name", "persistentVolumeClaim"]
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["ClusterIP", "NodePort", "LoadBalancer"], "description": "Kubernetes service type" },
            "ports": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "port": { "type": "integer" },
                  "targetPort": { "type": "integer" },
                  "protocol": { "type": "string", "enum": ["TCP", "UDP"] }
                },
                "required": ["name", "port", "targetPort", "protocol"]
              }
            }
          },
          "required": ["type", "ports"]
        },
        "ingress": {
          "type": ["object", "null"],
          "properties": {
            "annotations": {
              "type": ["object", "null"],
              "additionalProperties": { "type": "string" }
            },
            "className": { "type": "string" },
            "tls": {
              "type": ["array", "null"],
              "items": {
                "type": "object",
                "properties": {
                  "hosts": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "secretName": { "type": "string" }
                },
                "required": ["hosts", "secretName"]
              }
            },
            "rules": {
              "type": ["array", "null"],
              "items": {
                "type": "object",
                "properties": {
                  "host": { "type": "string" },
                  "http": {
                    "type": "object",
                    "properties": {
                      "paths": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "path": { "type": "string" },
                            "pathType": { "type": "string" },
                            "backend": {
                              "type": "object",
                              "properties": {
                                "service": {
                                  "type": "object",
                                  "properties": {
                                    "name": { "type": "string" },
                                    "port": {
                                      "type": "object",
                                      "properties": {
                                        "number": { "type": "integer" }
                                      },
                                      "required": ["number"]
                                    }
                                  },
                                  "required": ["name", "port"]
                                }
                              },
                              "required": ["service"]
                            }
                          },
                          "required": ["path", "pathType", "backend"]
                        }
                      }
                    },
                    "required": ["paths"]
                  }
                },
                "required": ["host", "http"]
              }
            }
          },
          "required": ["className"]
        }
      },
      "required": ["replicaCount", "containers", "service"]
    },
    "agent": {
      "type": "object",
      "description": "TeamCity Agent configuration",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "description": "Number of agent replicas/pods to run",
          "default": 3,
          "minimum": 1
        },
        "containers": {
          "type": "object",
          "properties": {
            "agent": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": { "type": "string", "description": "Docker image repository for TeamCity Agent" },
                    "tag": { "type": "string", "description": "Image tag to use" },
                    "pullPolicy": { "type": "string", "description": "Image pull policy", "enum": ["Always", "IfNotPresent", "Never"] }
                  },
                  "required": ["repository", "pullPolicy"]
                },
                "env": {
                  "description": "Environment variables for TeamCity Agent containers",
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "value": { "type": "string" }
                    },
                    "required": ["name", "value"]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": { "type": "string", "description": "Minimum amount of memory requested for each agent container" }
                      },
                      "required": ["memory"]
                    }
                  },
                  "required": ["requests"]
                },
                "volumeMounts": {
                  "description": "Additional volume mounts for TeamCity Agent containers",
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "mountPath": { "type": "string" }
                    },
                    "required": ["name", "mountPath"]
                  }
                }
              },
              "required": ["image", "resources"]
            }
          },
          "required": ["agent"]
        },
        "volumes": {
          "description": "Additional volumes to be mounted into the pods",
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "persistentVolumeClaim": {
                "type": "object",
                "properties": {
                  "claimName": { "type": "string" }
                },
                "required": ["claimName"]
              }
            },
            "required": ["name", "persistentVolumeClaim"]
          }
        }
      },
      "required": ["replicaCount", "containers"]
    }
  },
  "required": ["server", "agent"]
}
